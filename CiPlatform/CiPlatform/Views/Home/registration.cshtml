            <div class="col-lg-4 col-xl-4 col-sm-12 col-md-12 col-xs-12 p-5">
                @using (Html.BeginForm("registration", "Registration", FormMethod.Post))
                {

                    if (ViewBag.Status == 1)
                    {
                        <span class="alert alert-success ">registerd completed</span>
                      
                        <br />
                    }
                    else if (ViewBag.Status == 0)
                    {
                        <span class="alert alert-danger ">Error! </span>
                        <br />
                    }

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">First Name</label>

                        @Html.TextBoxFor(m => m.FirstName , new { @class = "form-control", @placeholder= "evan" })
                        @Html.ValidationMessageFor(model => model.FirstName,"", new
                    {
                    @class = "text-danger"
                    })
                    </div>
                    <div class="mb-2">
                        <label for="exampleFormControlInput1" class="form-label">Last Name</label>

                        @Html.TextBoxFor(m => m.LastName , new { @class = "form-control", @placeholder= "donohue" })
                        @Html.ValidationMessageFor(model => model.LastName,"", new
                    {
                    @class = "text-danger"
                    })
                    </div>
                    <div class="mb-2">
                        <label for="exampleFormControlInput1" class="form-label">Phone Number</label>

                        @Html.TextBoxFor(m => m.PhoneNumber , new { @class = "form-control", @placeholder= "8923454615"})
                        @Html.ValidationMessageFor(model => model.PhoneNumber,"", new
                    {
                    @class = "text-danger"
                    })
                    </div>
                    <div class="mb-2">
                        <label for="exampleFormControlInput1" class="form-label">Email address</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder="name@example.com"})
                        @Html.ValidationMessageFor(model => model.Email,"", new
                    {
                    @class = "text-danger"
                    })
                    </div>

                    <div class="mb-2">
                        <label for="exampleFormControlInput1" class="form-label">Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder="" , @type = "password" ,@id="txtPassword"})
                        @Html.ValidationMessageFor(model => model.Password,"", new
                    {
                    @class = "text-danger"
                    })

                    </div>
                    <div class="mb-2">
                        <label for="exampleFormControlInput1" class="form-label">Confirm Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder="" , @type = "password", @id="txtConfirmPassword"})
                        @Html.ValidationMessageFor(model => model.Password,"", new
                    {
                    @class = "text-danger"
                    })

                    </div>

                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="login">
                        <button type="submit" value="Register" class="btn btn-outline my-2 w-100">
                            Register
                        </button>
                    </a>
                }

                <div class="login text-center">
                    <p>
                        <span>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="resetpassword">Lost your password?</a>
                        </span>
                    </p>
                    <p class="loginnow">
                        Already Register?
                        <span>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="login" runat="server"> Login now </a>
                        </span>
                    </p>
                </div>
